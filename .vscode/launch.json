	"version": "0.2.0",
	"configurations": [
		{
			"name": "api",
			"type": "coreclr",
			"request": "launch",
			// "preLaunchTask": "build",
			"program": "${workspaceFolder}/src/client/NetCore.Api/bin/Debug/net5.0/NetCore.Api.dll",
			"args": ["--urls","https://localhost:6001;http://localhost:6000"],
			"cwd": "${workspaceFolder}/src/client/NetCore.Api/bin/Debug/net5.0",
			"stopAtEntry": false,
			"serverReadyAction": {
				"action": "openExternally",
				"pattern": "\\bNow listening on:\\s+(https?://\\S+)"
			},
			"env": {
				"ASPNETCORE_ENVIRONMENT": "Development"
			},
			// "sourceFileMap": {
			// 	"/Views": "${workspaceFolder}/Views"
			// }
		},
		{
			"name": "authserver",
			"type": "coreclr",
			"request": "launch",
			// "preLaunchTask": "build",
			"program": "${workspaceFolder}/src/client/NetCore.AuthServer/bin/Debug/net5.0/NetCore.AuthServer.dll",
			"args": ["--urls","https://localhost:6003;http://localhost:6002"],
			"cwd": "${workspaceFolder}/src/client/NetCore.AuthServer/bin/Debug/net5.0",
			"stopAtEntry": false,
			"serverReadyAction": {
				"action": "openExternally",
				"pattern": "\\bNow listening on:\\s+(https?://\\S+)"
			},
			"env": {
				"ASPNETCORE_ENVIRONMENT": "Development"
			},
			// "sourceFileMap": {
			// 	"/Views": "${workspaceFolder}/Views"
			// }
		}
	],
	"compounds": [
		{
			"name": "authserver/api",
			"configurations": [
				"authserver",
				"api"
			],
			"preLaunchTask": "build"
		}
	]
}